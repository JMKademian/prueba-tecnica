#IMAGEN DE PYTHON 
FROM python:3.8
#VARIABLES DE ENTORNO EN EL CONTENEDOR
#PARA EVITAR QUE PYTHON ESCRIBA CODIGO  
ENV PYTHONDONTWRITEBYTECODE 1
#PARA DESHABILITAR EL ALMACENAMIENTO EN BUFER DE LA SALIDA Y EL ERROR ESTANDAR DE PYTHON
ENV PYTHONUNBUFFERED 1
#INSTALO DEPENDENCIAS DE PYTHON Y POSTGRES
RUN apt-get update
RUN apt-get install -y graphviz-dev
RUN apt-get install -y pkg-config
RUN apt-get install -y postgresql-contrib libpq-dev gcc python3-dev
#ESTABLESCO DIRECTORIO DE TRABAJO
WORKDIR /app/backend
#COPIO LOS ARCHIVOS DEL DIRECTORIO ACTUAL AL DIRECTORIO DE TRABAJO
COPY . .
#COPY requirements.txt /app/backend
#ACTUALIZO PIP E INSTALO DEPENDENCIAS DE PYTHON ESPECIFICADAS ENEL ARCHIVO REQUIREMENTS.TXT
RUN python -m pip install --upgrade pip
RUN pip install -r requirements.txt
#EXPONGO EL PUERTO 8000
EXPOSE 8000
#COMANDO QUE SE EJECUTA CUANDO CUANDO SE INICIE EL CONTENEDOR
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
